@model GuestBoard
@{
    ViewData["Title"] = "GuestBoard";
}

<main >
    <div class="container p-3">  
        <div class="text-center p-3 my-3 text-white">
            <h3>GuestBoard</h3>
        </div>

        <form method="post" asp-controller="GuestBoard" asp-action="Add">
            <div class="row text-dark">
                <div class="col-sm-2 d-grid">
                    <div class="form-floating">
                        <input class="form-control" type="text" asp-for="Name" placeholder="Leave a Name here" />
                        <label>Name</label>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="form-floating">
                        <textarea class="form-control text-dark" asp-for="Content" placeholder="Leave a comment here"></textarea>
                        <label>Content</label>
                        <span class="text-danger" asp-validation-for="Content"></span>
                    </div>
                </div>
                <div class="col-sm-2 d-grid gap-2">
                    <button class="btn btn-lg btn-primary" type="submit">등록</button>
                </div>
            </div>
        </form>

        @await Component.InvokeAsync("GuestBoardList")
    </div>
     
</main>

