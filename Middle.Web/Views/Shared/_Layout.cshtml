@model User
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <link href="~/imges/Logo1.png" rel="icon" />

    <link href="~/site/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

</head>

<body class="bg-dark">
    <div class="cover-container d-flex w-100 h-100 flex-column">
        <header class="text-white bg-dark">
            <nav class="navbar navbar-brand navbar-collapse navbar-expand-lg justify-content-center" id="blurbackground">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link active text-white" asp-controller="GuestBoard" asp-action="Index">방명록</a>
                    </li>
                    <li class="nav-item mx-5">
                        <a asp-controller="Home" asp-action="Index"><img src="~/Imges/Logo1.png" width="50" height="50" class="d-inline-block align-text-top"></a>
                    </li>
                    @if (Context.Session.GetInt32("USER_KEY") == null)
                    {
                        <li class="nav-item" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <a class="nav-link active border-0 text-white" style="cursor:pointer">로그인</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-controller="Home" asp-action="Register">회원가입</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-controller="Home" asp-action="Logout">로그아웃</a>
                        </li>
                    }
                </ul>
            </nav>
        </header>

        <div>
            @RenderBody()
        </div>

        <footer>
        </footer>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog text-dark">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">로그인</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-controller="Home" asp-action="Login">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">아이디</label>
                            <input type="text" asp-for="UserId" class="form-control">
                            <span asp-validation-for="UserId"></span>
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">비밀번호</label>
                            <input type="password" asp-for="UserPassword" class="form-control">
                            <span asp-validation-for="UserPassword"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End Modal-->
</body>
</html>
