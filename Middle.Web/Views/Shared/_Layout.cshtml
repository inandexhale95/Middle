<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <link href="~/Imges/Logo1.png" rel="icon" />

    <link href="~/site/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

</head>

<body class="d-flex h-100 text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <nav class="navbar navbar-brand navbar-collapse navbar-expand-lg justify-content-center" id="blurbackground">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link active text-white" asp-controller="Board" asp-action="Index">Board</a>
                    </li>
                    <li class="nav-item mx-5">
                        <a asp-controller="Home" asp-action="Index"><img src="~/Imges/Logo1.png" width="50" height="50" class="d-inline-block align-text-top"></a>
                    </li>
                    <li class="nav-item" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <a class="nav-link active border-0 text-white" style="cursor:pointer">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-white" asp-controller="Home" asp-action="Login">로그인</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-white" asp-controller="Home" asp-action="Register">회원가입</a>
                    </li>
                </ul>
            </nav>
        </header>

        <div>
            @RenderBody()
        </div>

        <footer>
        </footer>

        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Recipient:</label>
                                <input type="text" class="form-control" id="recipient-name">
                            </div>
                            <div class="mb-3">
                                <label for="message-text" class="col-form-label">Message:</label>
                                <textarea class="form-control" id="message-text"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Send message</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal-->
</body>
</html>
